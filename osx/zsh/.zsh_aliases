alias cls="clear"
alias dl="curl -O"
alias ip="ifconfig | grep 'inet ' | cut -d ':' -f 2 | cut -d ' ' -f 2"
alias flushdns="dscacheutil -flushcache;sudo killall -HUP mDNSResponder"

